
{% extends "TEHANDPlatformBundle::layout.html.twig" %}

{% block title %}Accueil | {{ parent() }}{% endblock %}

{% block tehandplatform_body %}
    
    <h1>Liste des annonces</h1>
    
    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('tehan_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le  {{ advert.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>
                Pas (encore !) d'annonces
            </li>
        {% endfor %}
    </ul>
    <ul class="pagination">
        {# creation d'une fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
        {% for p in range(1, nbPages) %}
            <li {% if p ==page %} class="active" {% endif %}>
               <a href="{{ path('tehan_platform_home', {'page': p}) }}">
                    {{ p }}
                </a> 
            </li>
        {% endfor %}
    </ul>

{% endblock %}